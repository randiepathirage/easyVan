<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerEditDriverDetials"
    android:background="@drawable/doodle_back_gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign driver to another school van"
        android:textSize="22dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select driver"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/E_spinnerVehicle"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundededge"
        android:layout_marginTop="100dp"
        android:text="assign"
        android:onClick="assignDriver"
        android:textColor="#fff"
        android:textStyle="bold"/>




</LinearLayout>