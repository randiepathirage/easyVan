<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspName"
                        android:text="Child 01"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:textSize="20dp"
                        android:textColor="#000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspSchool"
                        android:text="School:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspGrade"
                        android:text="Grade:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspPickup"
                        android:text="Pickup location:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspDropOff"
                        android:text="Dropoff location:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspFees"
                        android:text="Fees per month:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspStartDate"
                        android:text="Start Date:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspDriver"
                        android:text="Driver:"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspVehicleNo"
                        android:text="Vehicle number:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspOwner"
                        android:text="Owner:"
                        android:layout_marginLeft="30dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dspDriverContact"
                        android:text="Contact no:"
                        android:layout_marginLeft="30dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
</LinearLayout>