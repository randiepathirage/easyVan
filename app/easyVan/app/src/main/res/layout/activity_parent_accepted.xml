<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentAccepted"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/doodle_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Your request to the vehicle number"/>

        <TextView
            android:id="@+id/edtVno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="CBF-3735"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="is accepted with monthly fee"/>

        <TextView
            android:id="@+id/edtFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Rs.0000.00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Enter start date if you agree to continue"/>

        <EditText
            android:id="@+id/edtDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:textAlignment="center"/>


        <Button
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:background="@drawable/roundededge"
            android:text="Agree"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:onClick="agree"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:background="@drawable/roundededge"
            android:text="Discard the request"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:onClick="discard"/>

    </LinearLayout>

</LinearLayout>