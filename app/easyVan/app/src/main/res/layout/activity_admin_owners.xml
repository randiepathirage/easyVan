<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminOwners">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:autofillHints="Enter name"
        android:gravity="center"
        android:iconifiedByDefault="true"
        android:outlineSpotShadowColor="@color/theme"
        android:paddingBottom="10dp"
        android:queryHint="Enter name"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

    </SearchView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myListView"
        android:layout_marginTop="60dp"
        android:background="#fff">


    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_add_24"
        android:onClick="btn_add_owner"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/theme"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="50dp"
        />
    <Button
        android:id="@+id/switchowner"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundededge"
        android:text="Add me as an Owner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:onClick="btn_switch_owner"
        android:textColor="@color/design_default_color_background"
        android:textSize="15sp" />


</RelativeLayout>

