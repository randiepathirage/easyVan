
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/DriverCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/VehicleNO"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Vehicle NO"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#FF0000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/NoOfSeat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/VehicleNO"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:text="No Of Seats"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#575657" />
            <TextView

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Vehicle NO"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#FF0000"
                android:textSize="16sp" />

            <TextView

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/VehicleNO"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="No Of Seats"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#575657" />


            <Button
                android:id="@+id/updatedriver"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_alignRight="@+id/List_LicenseNO"

                android:layout_alignParentEnd="true"

                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="-72dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_icon"
                android:padding="0dp"
                android:textAllCaps="false" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>